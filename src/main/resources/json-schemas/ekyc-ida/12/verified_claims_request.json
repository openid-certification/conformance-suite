{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://openid.net/schemas/ekyc-ida/12/verified_claims_request.json",
    "definitions": {
        "simple_element": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "object",
                    "properties": {
                        "essential": {
                            "type": "boolean"
                        },
                        "purpose": {
                            "type": "string",
                            "minLength": 3,
                            "maxLength": 300
                        }
                    }
                }
            ]
        },
        "constrainable_element": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "object",
                    "properties": {
                        "value": {
                            "type": "string"
                        },
                        "values": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "minItems": 1
                        },
                        "essential": {
                            "type": "boolean"
                        },
                        "purpose": {
                            "type": "string",
                            "minLength": 3,
                            "maxLength": 300
                        }
                    }
                }
            ]
        },
        "datetime_element": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "object",
                    "properties": {
                        "max_age": {
                            "type": "integer",
                            "minimum": 0
                        },
                        "essential": {
                            "type": "boolean"
                        },
                        "purpose": {
                            "type": "string",
                            "minLength": 3,
                            "maxLength": 300
                        }
                    }
                }
            ]
        },
        "document_details": {
            "type": "object",
            "properties": {
                "type": {
                    "$ref": "#/definitions/constrainable_element"
                },
                "document_number": {
                    "$ref": "#/definitions/simple_element"
                },
                "number": {
                    "$ref": "#/definitions/simple_element"
                },
                "personal_number": {
                    "$ref": "#/definitions/simple_element"
                },
                "serial_number": {
                    "$ref": "#/definitions/simple_element"
                },
                "date_of_issuance": {
                    "$ref": "#/definitions/datetime_element"
                },
                "date_of_expiry": {
                    "$ref": "#/definitions/datetime_element"
                },
                "issuer": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "$ref": "#/definitions/simple_element"
                        },
                        "formatted": {
                            "$ref": "#/definitions/simple_element"
                        },
                        "street_address": {
                            "$ref": "#/definitions/simple_element"
                        },
                        "locality": {
                            "$ref": "#/definitions/simple_element"
                        },
                        "region": {
                            "$ref": "#/definitions/simple_element"
                        },
                        "postal_code": {
                            "$ref": "#/definitions/simple_element"
                        },
                        "country": {
                            "$ref": "#/definitions/simple_element"
                        },
                        "country_code": {
                            "$ref": "#/definitions/simple_element"
                        },
                        "jurisdiction": {
                            "$ref": "#/definitions/simple_element"
                        }
                    }
                }
            }
        },
        "verifier": {
            "type": "object",
            "properties": {
                "organization": {
                    "$ref": "#/definitions/simple_element"
                },
                "txn": {
                    "$ref": "#/definitions/simple_element"
                }
            }
        },
        "check_details": {
            "type": "array",
            "items": [
                {
                    "check_method": {
                        "type": "string"
                    },
                    "organization": {
                        "type": "string"
                    },
                    "txn": {
                        "type": "string"
                    }
                }
            ]
        },
        "evidence": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "object",
                    "properties": {
                        "value": {
                            "enum": [
                                "electronic_signature",
                                "document",
                                "electronic_record",
                                "vouch"
                            ]
                        }
                    }
                },
                "attachments": {
                    "$ref": "#/definitions/simple_element"
                }
            },
            "required": [
                "type"
            ],
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "type": {
                                "value": "electronic_signature"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "signature_type": {
                                "$ref": "#/definitions/simple_element"
                            },
                            "issuer": {
                                "$ref": "#/definitions/simple_element"
                            },
                            "serial_number": {
                                "$ref": "#/definitions/simple_element"
                            },
                            "created_at": {
                                "$ref": "#/definitions/datetime_element"
                            }
                        }
                    },
                    "else": {}
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "value": "document"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "check": {
                                "$ref": "#/definitions/check_details"
                            },
                            "method": {
                                "$ref": "#/definitions/constrainable_element"
                            },
                            "verifier": {
                                "$ref": "#/definitions/verifier"
                            },
                            "time": {
                                "$ref": "#/definitions/datetime_element"
                            },
                            "document_details": {
                                "$ref": "#/definitions/document_details"
                            },
                            "document": {
                                "$ref": "#/definitions/document_details"
                            }
                        }
                    },
                    "else": {}
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "value": "electronic_record"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "check_details": {
                                "$ref": "#/definitions/check_details"
                            },
                            "time": {
                                "$ref": "#/definitions/datetime_element"
                            },
                            "record": {
                                "type": "object",
                                "properties": {
                                    "type": {
                                        "$ref": "#/definitions/constrainable_element"
                                    },
                                    "personal_number": {
                                        "$ref": "#/definitions/simple_element"
                                    },
                                    "created_at": {
                                        "$ref": "#/definitions/datetime_element"
                                    },
                                    "date_of_expiry": {
                                        "$ref": "#/definitions/datetime_element"
                                    },
                                    "source": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "$ref": "#/definitions/simple_element"
                                            },
                                            "formatted": {
                                                "$ref": "#/definitions/simple_element"
                                            },
                                            "street_address": {
                                                "$ref": "#/definitions/simple_element"
                                            },
                                            "locality": {
                                                "$ref": "#/definitions/simple_element"
                                            },
                                            "region": {
                                                "$ref": "#/definitions/simple_element"
                                            },
                                            "postal_code": {
                                                "$ref": "#/definitions/simple_element"
                                            },
                                            "country": {
                                                "$ref": "#/definitions/simple_element"
                                            },
                                            "country_code": {
                                                "$ref": "#/definitions/simple_element"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "else": {}
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "value": "vouch"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "check_details": {
                                "$ref": "#/definitions/check_details"
                            },
                            "time": {
                                "$ref": "#/definitions/datetime_element"
                            },
                            "attestation": {
                                "type": "object",
                                "properties": {
                                    "type": {
                                        "$ref": "#/definitions/constrainable_element"
                                    },
                                    "reference_number": {
                                        "$ref": "#/definitions/simple_element"
                                    },
                                    "personal_number": {
                                        "$ref": "#/definitions/simple_element"
                                    },
                                    "date_of_issuance": {
                                        "$ref": "#/definitions/datetime_element"
                                    },
                                    "date_of_expiry": {
                                        "$ref": "#/definitions/datetime_element"
                                    },
                                    "voucher": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "$ref": "#/definitions/simple_element"
                                            },
                                            "birthdate": {
                                                "$ref": "#/definitions/datetime_element"
                                            },
                                            "formatted": {
                                                "$ref": "#/definitions/simple_element"
                                            },
                                            "street_address": {
                                                "$ref": "#/definitions/simple_element"
                                            },
                                            "locality": {
                                                "$ref": "#/definitions/simple_element"
                                            },
                                            "region": {
                                                "$ref": "#/definitions/simple_element"
                                            },
                                            "postal_code": {
                                                "$ref": "#/definitions/simple_element"
                                            },
                                            "country": {
                                                "$ref": "#/definitions/simple_element"
                                            },
                                            "occupation": {
                                                "$ref": "#/definitions/simple_element"
                                            },
                                            "organization": {
                                                "$ref": "#/definitions/simple_element"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "else": {}
                }
            ]
        },
        "verified_claims": {
            "oneOf": [
                {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {
                                "$ref": "#/definitions/verified_claims_def"
                            }
                        ]
                    }
                },
                {
                    "$ref": "#/definitions/verified_claims_def"
                }
            ]
        },
        "verified_claims_def": {
            "type": "object",
            "properties": {
                "verification": {
                    "type": "object",
                    "properties": {
                        "trust_framework": {
                            "$ref": "#/definitions/constrainable_element"
                        },
                        "assurance_level": {
                            "$ref": "#/definitions/constrainable_element"
                        },
                        "assurance_process": {
                            "type": "object",
                            "properties": {
                                "policy":{
                                    "$ref": "#/definitions/constrainable_element"
                                },
                                "procedure": {
                                    "$ref": "#/definitions/constrainable_element"
                                },
                                "assurance_details": {
                                    "type": "array",
                                    "minItems": 1,
                                    "items": {
                                        "oneOf": [
                                            {
                                                "assurance_type":{
                                                    "$ref": "#/definitions/constrainable_element"
                                                },
                                                "assurance_classification": {
                                                    "$ref": "#/definitions/constrainable_element"
                                                },
                                                "evidence_ref": {
                                                    "$ref": "#/definitions/constrainable_element"
                                                }
                                            }
                                        ]
                                    }
                                }
                            }
                        },
                        "time": {
                            "$ref": "#/definitions/datetime_element"
                        },
                        "verification_process": {
                            "$ref": "#/definitions/simple_element"
                        },
                        "evidence": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "oneOf": [
                                    {
                                        "$ref": "#/definitions/evidence"
                                    }
                                ]
                            }
                        }
                    },
                    "required": [
                        "trust_framework"
                    ],
                    "additionalProperties": true
                },
                "claims": {
                    "type": "object",
                    "minProperties": 1,
                    "additionalProperties": {
                        "anyOf": [
                            {
                                "type": "null"
                            },
                            {
                                "type": "object",
                                "properties": {
                                    "essential": {
                                        "type": "boolean"
                                    },
                                    "purpose": {
                                        "type": "string",
                                        "minLength": 3,
                                        "maxLength": 300
                                    }
                                }
                            }
                        ]
                    }
                }
            },
            "required": [
                "verification",
                "claims"
            ],
            "additionalProperties": false
        }
    },
    "properties": {
        "userinfo": {
            "type": "object",
            "properties": {
                "verified_claims": {
                    "$ref": "#/definitions/verified_claims"
                }
            },
            "additionalProperties": true
        },
        "id_token": {
            "type": "object",
            "properties": {
                "verified_claims": {
                    "$ref": "#/definitions/verified_claims"
                }
            },
            "additionalProperties": true
        }
    }
}
